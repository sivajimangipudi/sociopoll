    <!-- Main content -->
    <section class="content">

      <!-- Default box -->
      <div class="box">
        <div class="box-header with-border">
          <h3 class="box-title"><%= req.session.user.first_name + ' '+ req.session.user.last_name %>'s Profile</h3>

          <div class="box-tools pull-right">
            <!-- <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip"
                    title="Collapse">
              <i class="fa fa-minus"></i></button>
            <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
              <i class="fa fa-times"></i></button> -->
          </div>
        </div>
        <!-- <%= JSON.stringify(data) %> -->

        <div class="box-body">
          <%- req.flash('message') %>
          <form action="/updateprofile/<%= data.id %>" name="singleuserprofile" class="singleuserprofile" method="post">
            <div class="form-group from-group-addon">
              <div class="row">
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">First Name</span>
                    <input type="text" class="form-control" name="first_name" value="<%= _.isUndefined(data.first_name) ? '' : data.first_name %>">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Last Name</span>
                    <input type="text" class="form-control" name="last_name" value="<%= _.isUndefined(data.last_name) ? '' : data.last_name %>">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Email</span>
                    <input type="text" class="form-control" name="email" readonly value="<%= _.isUndefined(data.email) ? '' : data.email %>">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Mobile</span>
                    <input type="text" class="form-control" name="mobile" value="<%= _.isUndefined(data.mobile) ? '' : data.mobile %>">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Facebook ID</span>
                    <input type="text" class="form-control" name="facebookId" value="<%= _.isUndefined(data.facebookId) ? '' : data.facebookId %>">
                  </div>
                </div>
                <!-- <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Google ID</span>
                    <input type="text" class="form-control" name="googleId" value="<%= _.isUndefined(data.googleId) ? '' : data.googleId %>">
                  </div>
                </div> -->
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Location</span>
                    <input type="text" class="form-control" name="location" value="<%= _.isUndefined(data.location) ? '' : data.location %>">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Username</span>
                    <input type="text" class="form-control" name="username" value="<%= _.isUndefined(data.username) ? '' : data.username %>">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Role</span>
                    <div class="form-control">
                      <span class="radio-inline">
                        <label><input type="radio" name="role" value="admin" <%= data.role == 'admin' ? 'checked' : '' %>> Admin</label>
                      </span>
                      <span class="radio-inline">
                        <label><input type="radio" name="role" value="user" <%= data.role == 'user' ? 'checked' : '' %>> User</label>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Status</span>
                    <div class="form-control">
                      <span class="radio-inline">
                        <label><input type="radio" name="status" value="1" <%= data.status == '1' ? 'checked' : '' %>> Active</label>
                      </span>
                      <span class="radio-inline">
                        <label><input type="radio" name="status" value="0" <%= data.status == '0' ? 'checked' : '' %>> In Active</label>
                      </span>
                    </div>
                  </div>
                </div>

                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Password</span>
                    <input type="password" class="form-control" name="password" id="password" data-toggle="tooltip" title="Enter password only if you want to change password" data-placement="bottom">
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="input-group">
                    <span class="input-group-addon">Confirm Password</span>
                    <input type="password" class="form-control" name="confirm_password" id="confirm_password" data-toggle="tooltip" title="Enter Confirm password only if you want to change password" data-placement="bottom">
                  </div>
                </div>
                <div class="modal-footer">
                  <input type="submit" class="btn btn-sms btn-success" value="Save">
                </div>
              </div>
              <!-- <div class="input-group">
                <input type="submit" class="btn btn-sm btn-success">
              </div> -->
            </div>
          </form>
        </div>
        <!-- /.box-body -->
        <!-- <div class="box-footer">

        </div> -->
        <!-- /.box-footer-->
      </div>
      <!-- /.box -->

    </section>
    <!-- /.content -->
  </div>
